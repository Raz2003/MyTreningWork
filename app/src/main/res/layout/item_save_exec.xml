<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/md_light_blue_A700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/item_save_exec_name"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Упражнение:"
                    android:textColor="#fff"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/item_save_exec_task"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Задача:"
                    android:textColor="#fff"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/item_save_exec_count"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Подходы:"
                    android:textColor="#fff"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/item_save_exec_time"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Время:"
                    android:layout_marginBottom="5dp"
                    android:textColor="#fff"
                    android:textSize="20dp"/>

            </LinearLayout>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:id="@+id/item_del"
                android:layout_height="wrap_content"
                app:borderWidth="0dp"
                android:layout_gravity="end|center_vertical"
                app:elevation="10dp"
                android:src="@drawable/icon_trash"
                android:layout_marginEnd="15dp"
                app:backgroundTint="@color/md_light_blue_A400"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>