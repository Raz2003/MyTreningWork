<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/md_light_blue_A400"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_name_exec"
                android:layout_marginTop="11dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Упражнение"
                android:paddingStart="@dimen/margin_normal"
                android:paddingEnd="@dimen/margin_normal"
                android:textSize="@dimen/large_size"
                android:textColor="#fff"/>

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/item_image_exec"
                android:layout_height="80dp"
                android:src="@drawable/ic_push_ups"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_marginTop="@dimen/margin_very_small"
                style="@style/basic_floating_action_btn"
                android:id="@+id/item_btn_save_exec"
                android:layout_marginBottom="@dimen/margin_normal"
                android:backgroundTint="@color/md_light_blue_A700"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>