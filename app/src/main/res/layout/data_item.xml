<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/bloc_view_element"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_gravity="center_vertical|center_horizontal"
                android:id="@+id/tv_item_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_new"
                android:text="Загрузка..."
                android:textColor="@color/md_light_blue_A700"
                android:textSize="35dp" />


            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_gravity="end"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="5dp"
                android:id="@+id/image_res"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_weak_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_photo"
            android:layout_width="50dp"
            app:shimmer_auto_start="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="start"
            android:layout_marginStart="25dp"
            android:layout_height="50dp" />


    </FrameLayout>

</LinearLayout>