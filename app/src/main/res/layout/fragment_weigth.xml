<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FragmentWeight">

    <androidx.cardview.widget.CardView
        android:id="@+id/materialCardViewPullUps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_in_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayoutPullUps1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:textColor="#ffff"
                    android:id="@+id/tvTaskPullUps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_new"
                    android:paddingTop="10dp"
                    android:text="Задача:"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tvLoopPullUps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_new"
                    android:text="Счёт:"
                    android:textColor="#ffff"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/PodhodPullUps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:fontFamily="@font/font_new"
                    android:text="Подходы:"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/dataTv"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/dataTvPullUps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:fontFamily="@font/font_new"
                    android:paddingBottom="5dp"
                    android:text="Дата:"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.136"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPullUps2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutPullUps1"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvTaskIntPullUps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_new"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:text="0"
                    android:textColor="#ffff"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tvPlusLoopPullUps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/font_new"
                    android:paddingStart="10dp"
                    android:textColor="#ffff"
                    android:text="0"
                    android:textSize="25dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPullUpsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_new"
                    android:paddingStart="10dp"
                    android:textColor="#ffff"
                    android:text="0"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/dataTValuePullUps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_new"
                    android:text="0.0.0000"
                    android:textColor="#ffff"
                    android:textSize="25dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/pull_ups_image_weak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_weak"
                android:layout_marginStart="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutPullUps2"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/materialCardViewPullUps2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardViewPullUps">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_in_card_view"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayoutPullUps3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:fontFamily="@font/font_new"
                    android:text="Введите выполненые подтягивания"
                    android:textSize="25dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_loopPullUps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Введите выполненые подтягиваний"
                    android:textSize="12dp" />

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/testBtnPullUps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#DEFFFFFF"
                android:src="@drawable/ic_check"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutPullUps3"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/materialCardViewPullUps3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/materialCardViewPullUps2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_in_card_view"
            android:layout_height="wrap_content"
            android:paddingStart="10dp">

            <LinearLayout
                android:id="@+id/linearLayoutPullUps4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:fontFamily="@font/font_new"
                    android:text="Сколько подтягиваний желаете \n cделать за день (по желанию)"
                    android:textSize="25dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edYouTaskPullUps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Введите желаемое значение......."
                    android:textSize="11dp" />

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAddTaskPullUps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#DEFFFFFF"
                android:src="@drawable/ic_add"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutPullUps4"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>