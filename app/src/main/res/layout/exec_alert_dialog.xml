<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/bg_dialog_exec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textColor="@color/md_light_blue_A700"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:fontFamily="@font/font_new"
            android:id="@+id/ad_exec_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="дата:"/>

        <TextView
            android:textColor="@color/md_light_blue_A700"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:fontFamily="@font/font_new"
            android:id="@+id/ad_exec_loop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="кол-во:"
            android:layout_gravity="center"
            android:textSize="30dp"/>

        <TextView
            android:textColor="@color/md_light_blue_A700"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:fontFamily="@font/font_new"
            android:id="@+id/ad_exec_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="задача:"
            android:layout_gravity="center"
            android:textSize="30dp"/>

        <TextView
            android:textColor="@color/md_light_blue_A700"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:fontFamily="@font/font_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_exec_touch"
            android:text="подходы:"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="30dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>